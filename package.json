{
  "name": "apispammer",
  "version": "0.0.1",
  "private": true,
  "packageManager": "yarn@3.7.0",
  "license": "UNLICENSED",
  "workspaces": {
    "packages": [
      "./packages/*"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "lint-staged": "^15.2.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.17.1"
  },
  "simple-git-hooks": {
    "pre-commit": [
      "yarn lint-staged"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
